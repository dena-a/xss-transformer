{
    "name": "dena-a/xss-transformer",
    "description": "a PHP and Laravel package to transform strings to prevent xss injection",
    "type": "library",
    "homepage": "https://github.com/dena-a/xss-transformer",
    "license": "MIT",
    "keywords": [
        "php",
        "laravel",
        "xss",
        "security"
    ],
    "authors": [
        {
            "name": "Dena Ajdari",
            "homepage": "https://github.com/dena-a"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Dena\\XssTransformer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dena\\XssTransformer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dena\\XssTransformer\\Laravel\\XssTransformerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
